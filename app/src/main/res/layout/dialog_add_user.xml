<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_bg"
        android:padding="12dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@id/editTextName"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEmail"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_bg"
        android:padding="12dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewFakultas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fakultas"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/datalistfakultas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFakultas"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_bg"
        android:focusableInTouchMode="false"
        android:hint="Pilih Fakultas"
        android:padding="12dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewProdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prodi"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@id/datalistfakultas"
        android:layout_marginTop="16dp"/>

    <AutoCompleteTextView
        android:id="@+id/dataprodi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProdi"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_bg"
        android:completionThreshold="3"
        android:hint="Ketik dan Pilih Prodi"
        android:padding="12dp"
        android:textColor="#000000" />

</RelativeLayout>
